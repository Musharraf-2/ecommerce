<div class="container border p-2">
  <h1 class="text-center">Cart</h1>
  <hr>
  <% @products.each do |product| %>
    <h2 class="m-2"><%= product.title %></h2>
      <div class="row">
        <div class="col-10">
          <%= form_for product do |f| %>
            <%= f.number_field :quantity, value: "1", min: "1", max: product.quantity, class: "form-control"  %>
          <% end %>
        </div>
        <div class="col-2">
          <%= button_to 'Remove from Cart', cart_path(id: product.id), method: :delete, class: "btn-danger p-2 rounded mx-2" %>
        </div>
      </div>
  <% end %>
  <br>
  <% if session[:cart].any? %>
    <div class="text-center">
      <%= button_to 'Proceed to Checkout', '', class: "btn-warning p-2 rounded", method: :get %>
    </div>
  <% end %>
  <br>
</div>
